<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.0//EN" "http://resources.openmrs.org/doctype/config-1.0.dtd">

<module configVersion="1.0">
	
	<!-- Base Module Properties -->
	<id>form2program</id>
	<name>Form2Program</name>
	<version>1.4</version>
	<package>org.openmrs.module.form2program</package>
	<author>Brian McKown</author>
	<description>
			Enrolls a patient in a program when an encounter form is submitted.
	</description>

	<activator>org.openmrs.module.form2program.Form2ProgramActivator</activator>
	
	<updateURL>https://dev.openmrs.org/modules/download/form2program/update.rdf</updateURL>
	
	<require_version>1.2.0.3340</require_version>
	
	<extension>
		<point>org.openmrs.admin.programs.localHeader</point>
		<class>org.openmrs.module.form2program.extension.html.AdminList</class>
	</extension>
	
	<!-- AOP -->
	<advice>
		<point>org.openmrs.hl7.HL7Service</point>
		<class>org.openmrs.module.form2program.advice.EncounterCreatedAfterAdvice</class>
	</advice>	
	<!-- /AOP -->
	
	<privilege>
		<name>Manage Programs</name>
		<description>This privilege allows the user to manage programs</description>
	</privilege>
	
	<!-- Internationalization -->
	<!-- All message codes should start with form2program.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

	<mappingFiles>
		Form2ProgramMap.hbm.xml
		Form2ProgramCondition.hbm.xml
		Form2ProgramTransition.hbm.xml
	</mappingFiles>

	
</module>

